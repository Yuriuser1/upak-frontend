
{
  "description": "Дополнительные скрипты для package.json - добавьте их в app/package.json",
  "additional_scripts": {
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "prepare": "husky install || true",
    "analyze": "cross-env ANALYZE=true next build",
    "audit": "yarn audit --level moderate",
    "audit:fix": "yarn audit --fix",
    "docker:build": "docker build -t upak-frontend .",
    "docker:run": "docker run -p 3000:3000 upak-frontend",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "setup": "../scripts/setup.sh",
    "deploy:staging": "../scripts/deploy.sh staging",
    "deploy:prod": "../scripts/deploy.sh production",
    "health-check": "../scripts/health-check.sh",
    "backup": "../scripts/backup.sh",
    "clean": "rm -rf .next coverage node_modules/.cache",
    "clean:all": "yarn clean && rm -rf node_modules yarn.lock",
    "postinstall": "prisma generate || true"
  }
}
